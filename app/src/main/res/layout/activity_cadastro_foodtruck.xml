<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    android:isScrollContainer="true"
    android:scrollbars="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_bar"
        android:orientation="vertical"
        android:scrollbars="vertical" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:title="Cadastro de Estabelecimento"
        app:titleTextColor="#FFFFFF"></android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_bar"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/cadNomeEstabelecimento"
            android:textColor="@color/colorSecondaryDark"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/cadNomeEstabelecimento"
            android:inputType="text"
            android:textColorHint="@color/colorPrimary" />

        <TextView
            android:id="@+id/tVEspecialidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/cadEspecialidade"
            android:textColor="@color/colorSecondaryDark"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/eTEspecialidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/cadEspecialidade"
            android:inputType="text"
            android:textColorHint="@color/colorPrimary" />

        <TextView
            android:id="@+id/tvNomeProprietario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/cadNomeProprietario"
            android:textColor="@color/colorSecondaryDark"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/eTNomeProprietario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/cadNomeProprietario"
            android:inputType="text"
            android:textColorHint="@color/colorPrimary" />


        <TextView
            android:id="@+id/tvcadEndereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/cadEndereco"
            android:textColor="@color/colorSecondaryDark"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/eTcadEndereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/cadEndereco"
            android:inputType="text"
            android:textColorHint="@color/colorPrimary" />


        <TextView
            android:id="@+id/tvTelefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/cadTelefone"
            android:textColor="@color/colorSecondaryDark"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/eTTelefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/cadTelefone"
            android:inputType="phone"
            android:textColorHint="@color/colorPrimary" />

        <TextView
            android:id="@+id/tvSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/cadSenha"
            android:textColor="@color/colorSecondaryDark"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/eTSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/cadSenha"
            android:inputType="textPassword"
            android:textColorHint="@color/colorPrimary" />

        <TextView
            android:id="@+id/tvConfirmaSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/cadConfirmaSenha"
            android:textColor="@color/colorSecondaryDark"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/eTConfirmaSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/cadConfirmaSenha"
            android:inputType="textPassword"
            android:textColorHint="@color/colorPrimary" />


        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:scrollbars="vertical"
            android:text="Eu concordo com os Termos de Uso"
            android:textColor="@color/colorPrimaryDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"
                android:padding="20dp"
                android:text="Cancelar" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorSecondary"
                android:padding="20dp"
                android:textColor="@color/white"
                android:text="Cadastrar" />
        </LinearLayout>

    </LinearLayout>

    </RelativeLayout>

</ScrollView>