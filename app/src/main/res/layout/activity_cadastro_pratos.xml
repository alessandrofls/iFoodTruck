                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

            <ImageView
                    android:id="@+id/imageButton"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
