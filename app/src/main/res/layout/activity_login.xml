<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_backgroud"
        tools:context=".Login">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appLogo">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/appLogo"
                android:src="@drawable/logo_ift"
                android:scaleType="fitCenter"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"/>

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/appLogo">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/trans_white_rectangle"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold" android:text="@string/msgboasvndasx"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:text="@string/MsgDescricao"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp" />
                <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="@string/cadLogin"
                        android:textColorHint="#c6c6c6"
                        android:background="@drawable/rounded_white"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:drawableLeft="@drawable/ic_user_icon"
                        android:textSize="14sp"
                        android:padding="5dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:id="@+id/userLogin"
                        android:layout_marginBottom="10dp"/>
                <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:inputType="textPassword"
                        android:hint="@string/cadSenha"
                        android:textColorHint="#c6c6c6"
                        android:background="@drawable/rounded_white"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:drawableLeft="@drawable/ic_lock_black_24dp"
                        android:textSize="14sp"
                        android:padding="5dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:id="@+id/userSenha"
                        android:layout_marginBottom="10dp"/>
                <CheckBox
                        android:id="@+id/lembrarUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="5dp"
                        android:textSize="11sp" android:text="@string/lembraruser"/>

                <android.support.design.button.MaterialButton
                        android:id="@+id/btentrar"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="@color/colorPrimary"
                        android:onClick="signin"
                        android:text="@string/login"
                        app:backgroundTint="@color/colorSecondary"/>

            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</ScrollView>